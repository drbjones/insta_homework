<div class="page-header">
  <h1>My Photos</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Caption</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @my_photos.each do |photo| %>
      <tr>
        <td><a href = "/photos/<%= photo.id %>"><img src = <%= photo.image_url %> width = "125"></a></td>
        <td><%= photo.caption_text %></td>
        <td><%= photo.user_id %></td>

        <td>
          <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
