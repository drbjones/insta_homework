<div class="page-header">
  <h1>Add Photo</h1>
</div>

<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_photo" class="form-horizontal">
  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">
      Image url
    </label>
    <div class="col-sm-10">
      <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="<%= @photo.image_url %>">
    </div>
  </div>

  <!-- Label and input for caption_text -->
  <div class="form-group">
    <label for="caption_text" class="col-sm-2 control-label">
      Caption text
    </label>
    <div class="col-sm-10">
      <input type="text" id="caption_text" name="caption_text" placeholder="Caption text" class="form-control" value="<%= @photo.caption_text %>">
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Photo" class="btn btn-primary">
    </div>
  </div>
</form>
