<div class="page-header">
  <h1>Photo #<%= @photo.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Image url</dt>
  <dd><img src = <%= @photo.image_url %> width = "500"></dd>

  <dt>Caption text</dt>
  <dd><%= @photo.caption_text %></dd>

  <dt>User</dt>
  <dd><%= @photo.user_id %></dd>

</dl>

<form action="/create_favorite" class="form-horizontal">
  <!-- Label and input for photo_id -->
    <div>
      <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value=<%= params[:id] %>>
    </div>

  <!-- Label and input for user_id -->
    <div>
      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value=<%= current_user.id %>>
    </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Favorite Photo" class="btn btn-primary">
    </div>
  </div>
</form>

<div>
  <h4>Comments:</h4>
  <% @photo.comments.each do |comment| %>
  <table class = "table table-striped table-hover">
    <tr>
      <td>
        <%= comment.content %>
      </td>
    </tr>
  </table>
  <% end %>
</div>


<form action="/create_comment" class="form-horizontal">
  <!-- Label and input for content -->
  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">
      Content
    </label>
    <div class="col-sm-10">
      <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"></textarea>
    </div>
  </div>

  <!-- Label and input for picture_id -->
  <div class="form-group">

    <div class="col-sm-10">
      <input type="hidden" id="photo_id" name="photo_id" placeholder="Picture" class="form-control" value = <%= params[:id] %>>
    </div>
  </div>

  <div>
     <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value=<%= current_user.id %>>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Comment" class="btn btn-primary">
    </div>
  </div>
</form>
